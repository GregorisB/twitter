<div class="w-75 offset-2 mt-5">
    <div class="card" style="width: 18rem">
        <div class="card-body">
            <h5 class="card-title">
                <%= user.firstname %> <%= user.surname %>
            </h5>
            <p class="card-text"><%= user.bio %></p>
            <% if (currentUser.id == user.id) { %>
            <a
                href="<%= currentUser.username %>/edit-profile"
                class="btn btn-primary"
                >Edit</a
            >
            <% } else { %>
            <a
                href="#"
                data-username="<%= user.username %>"
                class="btn btn-warning <%= btn %>-btn"
                ><%= btn %>
            </a>
            <a href="" class="btn btn-warning">Message</a>
            <% } %>
        </div>
    </div>
    <div class="w-25">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li
                        class="nav-item p-1 mx-1 border rounded"
                        id="save_posts"
                    >
                        Save Posts
                    </li>
                    <li class="nav-item p-1 mx-1 border rounded" id="#">
                        Link
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="actions-container w-50 offset-4 mt-5"></div>
</div>
