<%- layout('layout/template_view') %>
<script>
	const PAGE = "MESSAGES";
</script>
<div class="w-50 offset-4">
	<div class="d-flex justify-content-between align-items-center">
		<h1>Chat</h1>
	</div>
	<div class="messages-container">
		<form
			class="chat-header d-flex"
			method="POST"
			action="/chat/<%=chat._id%>?_method=PATCH"
		>
			<input
				name="chat_name"
				id=""
				class="input-group border-0"
				placeholder="<%if(chat.chatName){%><%=chat.chatName%><%}else{%><% for(let user of chat.users){%><%=user.firstname%><%}%><%}%>"
				required
			/>
			<button class="btn btn-sm btn-white">save</button>
		</form>
	</div>
	<div class="messages-container pt-5 mt-5">
		<form class="d-flex">
			<input
				name="chat_message"
				class="input-group p-1"
				placeholder="Type a message..."
				required
			/>
			<button class="btn btn-sm btn-success">send</button>
		</form>
	</div>
</div>
